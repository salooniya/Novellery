<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
    <title>Novellery</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Averia+Serif+Libre:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style type="text/tailwindcss">

        .font-display {
            font-family: 'Averia Serif Libre', serif;
        }

        input[type="checkbox"]:before {
            background-color:green;
        }

        @layer components {

            body {
                @apply bg-slate-50 flex flex-col min-h-screen;
            }

            header {
                @apply py-4 border-b bg-white;

                nav {
                    @apply mx-auto max-w-screen-lg px-8 flex justify-between font-semibold;
                }

                .brand {
                    @apply flex items-center;

                    a {
                        @apply text-pink-600 text-xl font-display;
                    }
                }

                .links {
                    @apply flex items-center gap-8;

                    a {
                        @apply hover:text-pink-600;
                    }
                }
            }

            footer {
                @apply py-4 border-t bg-white mt-auto;

                div {
                    @apply mx-auto px-8 text-center;
                }
            }

            main {
                @apply flex flex-col items-center justify-center flex-1 py-8 bg-gray-50;
            }

            form.auth {
                @apply block w-full max-w-md px-8 bg-white rounded-md ring-1 ring-slate-200;

                h1 {
                    @apply text-center mt-12 mb-12 font-bold text-3xl text-slate-800 font-display;
                }

                div {
                    @apply mb-6;
                }

                label {
                    @apply block font-semibold text-slate-800;
                }

                input {
                    @apply block w-full bg-white rounded-md ring-1 shadow-sm ring-slate-200 text-slate-900 px-4 py-2 mt-2 focus:outline-none focus:ring-2 focus:ring-pink-400;
                }

                button[type=submit] {
                    @apply mt-8 block w-full text-white px-4 py-2 rounded-md font-semibold bg-pink-500 hover:bg-pink-700;
                }

                p {
                    @apply mt-8 mb-10 text-center text-slate-600 text-sm;

                    a {
                        @apply hover:text-pink-500 underline;
                    }
                }
            }
        }
    </style>
</head>
<body>
    <%- body %>
</body>
</html>
